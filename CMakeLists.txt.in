cmake_minimum_required(VERSION 3.16)
project(3rparty NONE)

include(ExternalProject)
ExternalProject_Add(cmocka
  GIT_REPOSITORY https://gitlab.com/cmocka/cmocka
  GIT_TAG master
  SOURCE_DIR "${CMAKE_SOURCE_DIR}/3rdparty/cmocka"
  BINARY_DIR "${CMAKE_BINARY_DIR}/3rdparty/cmocka"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND ""#${CMAKE_COMMAND} -S. -Bbuild -GNinja
  INSTALL_COMMAND ""
  TEST_COMMAND ""
)

include(ExternalProject)
ExternalProject_Add(libyaml
  GIT_REPOSITORY https://github.com/yaml/libyaml
  GIT_TAG master
  SOURCE_DIR "${CMAKE_SOURCE_DIR}/3rdparty/libyaml"
  BINARY_DIR "${CMAKE_BINARY_DIR}/3rdparty/libyaml"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND ""
  INSTALL_COMMAND ""
  TEST_COMMAND ""
)
